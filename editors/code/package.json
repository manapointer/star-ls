{
  "name": "star-ls",
  "version": "0.0.1",
  "description": "",
  "engines": {
    "vscode": "^1.63.0"
  },
  "activationEvents": [
    "onLanguage:starlark"
  ],
  "main": "./dist/main",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "star-ls",
      "properties": {
        "languageServerExample.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "languageServerExample.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    },
    "grammars": [
      {
        "language": "starlark",
        "scopeName": "source.starlark",
        "path": "./syntaxes/starlark.tmLanguage.json"
      }
    ],
    "languages": [
      {
        "id": "starlark",
        "aliases": [
          "Starlark",
          "starlark",
          "Bazel"
        ],
        "extensions": [
          ".BUILD",
          ".WORKSPACE",
          ".bazel",
          ".bzl",
          ".sky",
          ".star"
        ],
        "filenames": [
          "BUILD",
          "WORKSPACE"
        ],
        "configuration": "./syntaxes/starlark.configuration.json"
      }
    ]
  },
  "scripts": {
    "build": "tsc -b",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "manapointer",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^18.11.9",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "eslint": "^8.27.0",
    "typescript": "4.8.4"
  },
  "dependencies": {
    "vscode-languageclient": "^8.0.2"
  }
}
