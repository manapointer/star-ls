{
  "compilerOptions": {
      "module": "commonjs",
      "target": "es2021",
      "outDir": "dist",
      "lib": ["es2021"],
      "sourceMap": true,
      "rootDir": "src",
      "strict": true,
      "useUnknownInCatchVariables": false,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "newLine": "LF",
      "declaration": true
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
