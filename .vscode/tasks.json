{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Extension",
            "group": "build",
            "type": "npm",
            "script": "build",
            "path": "editors/code/",
        },
        {
            "label": "Build Extension in Background",
            "group": "build",
            "type": "npm",
            "script": "watch",
            "path": "editors/code/",
        },
        {
            "label": "Build Server",
            "group": "build",
            "type": "shell",
            "command": "bazel build //crates/star_ls",
            "problemMatcher": "$rustc"
        },
        {
            "label": "Build Server and Extension",
            "dependsOn": ["Build Server", "Build Extension"],
            "problemMatcher": "$rustc"
        }
    ]
}